{
  "rules": {
    "entities": {
      ".read": "true",
      ".write": "false"
    },

    "rooms": {
      ".read": "true",
      ".write": "true",

      "$roomId": {
        "members": {
          "$member": {
            ".validate": "!root.child('users/' + $member + '/room').exists() && root.child('rooms/' + $roomId + '/status').val() != 'playing' && (auth.uid == $roomId || auth.uid == $member)"
          }
        },
        "status": {
          ".validate": "data.parent().exists()"
        },
        "$other": {
          ".write": "true",
          ".validate": "auth.uid == $roomId"
        }
      }
    },

    "users": {
      ".read": "true",

      "$userId": {
        ".write": "auth.uid == $userId",

        "room": {
          ".validate": "root.child('rooms/' + newData.val() + '/status').val() != 'playing'"
        }
      }
    },

    "$other": {
      ".read": "true",
      ".write": "true"
    }
  }
}